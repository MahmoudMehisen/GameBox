<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainRelativeView"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SolitaireGameActivity">

    <ImageButton
        android:id="@+id/baseImageButton"
        android:layout_width="55dp"
        android:visibility="gone"
        android:layout_height="100dp" />

    <RelativeLayout
        android:id="@+id/finishedAndDrawStackCardsRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/playCardRelativeView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/finishedCardsRelativeLayout"
            android:layout_width="255dp"
            android:layout_height="match_parent"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawRelativeLayout"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"></RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playCardRelativeView"
        android:layout_width="300dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finishedAndDrawStackCardsRelativeLayout"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playCardRelativeView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/newGameButton"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/hintButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/newGameButton" />

        <Button
            android:id="@+id/undoButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/hintButton" />


        <Button
            android:id="@+id/exitButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/undoButton" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>